<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_with_9_nine_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With 9 Nine Patch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_9_patch"
            android:background="@drawable/bck_bubble_9_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_example_for_9_patch"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_with_9_nine_patch"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_without_9_nine_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Without 9 Nine Patch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_9_patch"/>

        <TextView
            android:id="@+id/tv_without_9"
            android:background="@drawable/bck_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_example_for_9_patch"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_without_9_nine_patch"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>